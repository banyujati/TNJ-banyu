print(config[3])

#soal5
mahasiswa = ("ata", "ipa", [85, 96, 64])
list_mahasiswa = list(mahasiswa)
print ("nama ", (mahasiswa[0]))
print ("nilai ", (list_mahasiswa[2]))

list_mahasiswa[2][2] = 1000
mahasiswa = tuple(list_mahasiswa)
print(mahasiswa)

